# Database Configuration (for WordPress) - Using root user
WORDPRESS_DB_HOST=example_db:3306
WORDPRESS_DB_NAME=example
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DB_USER=root
WORDPRESS_DB_PASSWORD=root

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=example

# WordPress Configuration
WORDPRESS_ENVIRONMENT_TYPE=development
WP_ENVIRONMENT_TYPE=development
WORDPRESS_DEBUG=true
WORDPRESS_DEBUG_DISPLAY=false
WORDPRESS_DEBUG_LOG=true
WORDPRESS_CACHE=false

# Security Headers
X_FRAME_OPTIONS=sameorigin

# WordPress Auth Keys (generate unique keys for production)
WORDPRESS_AUTH_KEY=''
WORDPRESS_SECURE_AUTH_KEY=''
WORDPRESS_LOGGED_IN_KEY=''
WORDPRESS_NONCE_KEY=''
WORDPRESS_AUTH_SALT=''
